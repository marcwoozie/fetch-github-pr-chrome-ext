{
  "name": "GitHub Pull Request Checker",
  "description": "You can get Pull Requests on GitHub on a regular basis",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "app",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage",
    "alarms"
  ]
}
